<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171"
 xmlns:fx="http://javafx.com/fxml/1" fx:controller="products.DeletedItemsController">
   <center>
      <TableView fx:id="tableview" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /> 
         </columnResizePolicy> 
      </TableView> 
   </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <bottom>
      <HBox prefHeight="40.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children> 
            <Button fx:id="restoreButton" mnemonicParsing="false" onAction="#delete" text="Restore Selected" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding> 
      </HBox>
   </bottom>
   <top>
      <ToolBar prefHeight="40.0" BorderPane.alignment="CENTER">
        <items>
          <Button mnemonicParsing="false" onAction="#back" text="Back" />
            <Separator orientation="VERTICAL" />
            <TextField fx:id="search" promptText="Search" />
        </items>
      </ToolBar>
   </top>
   <left>
      <VBox prefHeight="200.0" BorderPane.alignment="CENTER" />
   </left> 
</BorderPane>
